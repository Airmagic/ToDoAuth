
{{!-- task complete list page --}}
<h2>{{task.text}}</h2>

<div class="taskinfo">
	{{#if task.completed}}
		<p>{{task.text}} is completed.</p>
	{{else}}
		<p>{{task.text}} is not yet completed.</p>
		
		{{!-- form buttom for task done --}}
		<form action="/done" method="POST" class="done_form">
			<input type="hidden" name="_id" value="{{task._id}}">	
			<input class="done_button" type="submit" name="done" value="Done">	
		</form>

{{/if}}

</div>

<div class="delete_task">

	{{!-- form button to delete a task --}}
  <form action="/delete" method="POST" class="delete_form">
    <input type="hidden" name="_id" value="{{task._id}}">
    <input class="delete_button" type="submit" name="done" value="Delete">
  </form>

</div>

